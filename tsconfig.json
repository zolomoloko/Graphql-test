{
  "compilerOptions": {
    "target": "ES2022",          // Top-level await дэмжих
    "module": "NodeNext",         // moduleResolution = NodeNext бол module ч NodeNext байх ёстой
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
